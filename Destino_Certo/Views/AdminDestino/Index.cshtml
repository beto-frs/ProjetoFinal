@model IEnumerable<Destino_Certo.Models.DestinoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Incluso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeArquivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtensaoArquivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrayImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoArquivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Incluso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeArquivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtensaoArquivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrayImagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoArquivo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
