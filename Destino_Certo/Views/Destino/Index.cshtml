@model IEnumerable<Destino_Certo.Models.DestinoModel>

@{
    ViewData["Title"] = "Index";
    List<string> imagens = new List<string>();
    foreach (var items in Model)
    {
        string Base64 = Convert.ToBase64String(items.ArrayImagem);
        string img = String.Format("data:image/jpeg;base64,{0}", Base64);
        imagens.Add(img);
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {

                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@Html.DisplayFor(modelItem => item.ExtensaoArquivo)" alt="...">

                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Local)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item?.Id" class = "btn btn-sm btn-outline-secondary">Detalhes</a>
                                    @Html.ActionLink("Detalhes","Details","Destino",new { Id = item.Id}, new{ @class = "btn btn-sm btn-outline-secondary" })
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>